@model List<WeatherForecast>

@{
    ViewData["Title"] = "Weather Forecast";
}

  <form asp-controller="WeatherForecast" asp-action="Index">
    <p>
      City: <input type="text" name="SearchString">
      <input type="submit" value="Search" />
    </p>
  </form>

  <table class="table">
    <thead>
      <tr>
        <th>
          @Html.DisplayNameFor(model => model[0].Date)
        </th>
        <th>
          @Html.DisplayNameFor(model => model[0].TemperatureF)
        </th>
        <th>
          @Html.DisplayNameFor(model => model[0].Summary)
        </th>
      </tr>
    </thead>
    <tbody>
      @foreach (var item in Model)
      {
      <tr>
        <td>
          @Html.DisplayFor(modelItem => item.Date)
        </td>
        <td>
          @Html.DisplayFor(modelItem => item.TemperatureF)
        </td>
        <td>
          @Html.DisplayFor(modelItem => item.Summary)
        </td>
      </tr>
      }
    </tbody>
  </table>
