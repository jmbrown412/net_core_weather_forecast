@model WeatherForecastResult

@{
    ViewData["Title"] = "Weather Forecast";
}

  <form asp-controller="WeatherForecast" asp-action="Index">
    <p>
      City: <input type="text" name="SearchString">
      <input type="submit" value="Search" />
    </p>
  </form>

  <table class="table">
    <thead>
      <tr>
        <th>
          @Html.DisplayNameFor(model => model.WeatherForecasts[0].Date)
        </th>
        <th>
          @Html.DisplayNameFor(model => model.WeatherForecasts[0].TemperatureF)
        </th>
        <th>
          @Html.DisplayNameFor(model => model.WeatherForecasts[0].Summary)
        </th>
      </tr>
    </thead>
    <tbody>
      @if (Model.WeatherForecasts.Count > 0)
      {
      <tr>5 day forecast for @Html.DisplayFor(model => model.City)</tr>
        @foreach (var item in Model.WeatherForecasts)
        {
          <tr>
            <td>
              @Html.DisplayFor(modelItem => item.Date)
            </td>
            <td>
              @Html.DisplayFor(modelItem => item.TemperatureF)
            </td>
            <td>
              @Html.DisplayFor(modelItem => item.Summary)
            </td>
          </tr>
        }
      }
      else if (Model.WeatherForecasts.Count < 1 && Model.WasSearched)
      {
        <tr>No results found</tr>
      }

    </tbody>
  </table>
